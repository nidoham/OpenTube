<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp">

    <!-- Video Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="txtTitle"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/md_theme_onBackground"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Video Metadata (Views, Upload Time, etc.) -->
    <TextView
        android:id="@+id/txtMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/md_theme_onSurfaceVariant"
        android:textSize="12sp" />

    <!-- Channel Info Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/channelInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgChannelAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_placeholder"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtChannelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/imgChannelAvatar"
            app:layout_constraintStart_toEndOf="@id/imgChannelAvatar"
            app:layout_constraintEnd_toStartOf="@id/btnSubscribe" />

        <TextView
            android:id="@+id/txtSubscriberCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/txtChannelName"
            app:layout_constraintBottom_toBottomOf="@id/imgChannelAvatar"
            app:layout_constraintStart_toStartOf="@id/txtChannelName"
            app:layout_constraintEnd_toEndOf="@id/txtChannelName" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubscribe"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="100dp"
            android:text="Subscribe"
            android:textColor="@color/md_theme_onPrimary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:backgroundTint="@color/seed"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>